<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/idBackBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10sp"
            android:background="@drawable/back"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp">
            <EditText
                android:id="@+id/idSearchEv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="text"
                android:background="@drawable/corner_search"
                android:hint="@string/main_page_search"
                android:paddingStart="20sp"
                android:autofillHints="@null"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/idSearchBtn"
                android:layout_width="40sp"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/search"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idMusicPicIv"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/idMusicName"
            android:layout_margin="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/idMusicArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10sp"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="@string/music_tips"
        android:textSize="10sp"
        tools:ignore="SmallSp" />
</RelativeLayout>